<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:camera="http://schemas.android.com/apk/res/com.hmdglobal.app.camera" android:gravity="center_horizontal" android:orientation="vertical" style="@style/start_up_dialog_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="28dp" android:text="@string/remember_location_title" style="@style/fullscreen_dialog_title"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="28dp" android:src="@drawable/geo_opt_in_graphic"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="28dp" android:layout_marginRight="28dp" android:layout_weight="1">
        <CheckBox android:textSize="16sp" android:textColor="@color/dialog_text_color" android:gravity="top" android:id="@+id/check_box" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/remember_location_prompt" android:lineSpacingExtra="1.9sp"/>
    </LinearLayout>
    <Button android:id="@+id/confirm_button" android:layout_marginTop="18dp" android:layout_marginBottom="18dp" android:text="@string/startup_dialog_button_next" style="@style/BlueButton"/>
</LinearLayout>
