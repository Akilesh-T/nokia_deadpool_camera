<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:camera="http://schemas.android.com/apk/res/com.hmdglobal.app.camera" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.hmdglobal.app.camera.ui.ProgressOverlay android:id="@+id/progress_overlay" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/review_image" android:background="@android:color/black" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter"/>
    <com.hmdglobal.app.camera.ui.CountDownView android:id="@+id/count_down_view" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="160dp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/remaining_seconds" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </com.hmdglobal.app.camera.ui.CountDownView>
</FrameLayout>
